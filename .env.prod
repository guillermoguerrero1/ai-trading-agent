# Production Environment Configuration
# AI Trading Agent - Production Settings

# Core Environment
ENVIRONMENT=production
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database Configuration
DATABASE_URL=sqlite:///./trading_agent.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=./logs

# Broker Configuration
BROKER=paper
BROKER_TYPE=paper

# Risk Management (Production - Conservative)
INITIAL_CAPITAL=100000.0
MAX_CONTRACTS=5
MAX_ORDER_SIZE=5
MAX_POSITION_SIZE_USD=25000.0
MAX_DAILY_VOLUME_USD=50000.0
DAILY_LOSS_CAP_USD=200.0
MAX_DAILY_LOSS=200.0
MAX_TRADES_PER_DAY=5
MAX_DAILY_TRADES=5
POSITION_LIMIT_PCT=0.1
ENABLE_RISK_MANAGEMENT=true

# Market Data Configuration
DATA_BUFFER_SIZE=2000
MARKET_DATA_UPDATE_INTERVAL=0.5

# Trading Sessions (Production - Market Hours Only)
SESSION_PROVIDER=none
TRADING_START_TIME=09:30
TRADING_END_TIME=16:00
TRADING_DAYS=1,2,3,4,5

# Timezone
TZ=America/Phoenix
DEFAULT_TIMEZONE=America/Phoenix

# Production-specific settings
DATABASE_ECHO=false
LOG_LEVEL=INFO
