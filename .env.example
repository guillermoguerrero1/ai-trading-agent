# AI Trading Agent Environment Configuration
# Copy this file to .env and update the values

# Environment
APP_ENV=dev
TZ=America/Phoenix

# Broker Configuration
BROKER=paper
INITIAL_CAPITAL=100000.0

# Risk Management
DAILY_LOSS_CAP_USD=300
MAX_TRADES_PER_DAY=5
MAX_CONTRACTS=10
MAX_POSITION_SIZE_USD=50000.0
MAX_DAILY_VOLUME_USD=100000.0
SESSION_WINDOWS=06:30-08:00,08:30-10:00

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Database
DATABASE_URL=sqlite:///./trading_agent.db

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ai-trading-agent

# Broker APIs (for future use)
# Tradovate
TRADOVATE_API_KEY=your-tradovate-api-key
TRADOVATE_SECRET=your-tradovate-secret
TRADOVATE_SANDBOX=true

# IBKR
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_ACCOUNT=your-ibkr-account
