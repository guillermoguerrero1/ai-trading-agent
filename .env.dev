# Development Environment Configuration
# AI Trading Agent - Development Settings

# Core Environment
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=9001
API_WORKERS=1

# Database Configuration
DATABASE_URL=sqlite:///./trading_agent_dev.db
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_DIR=./logs

# Broker Configuration
BROKER=paper
BROKER_TYPE=paper

# Risk Management (Development - More Permissive)
INITIAL_CAPITAL=100000.0
MAX_CONTRACTS=10
MAX_ORDER_SIZE=10
MAX_POSITION_SIZE_USD=50000.0
MAX_DAILY_VOLUME_USD=100000.0
DAILY_LOSS_CAP_USD=500.0
MAX_DAILY_LOSS=500.0
MAX_TRADES_PER_DAY=10
MAX_DAILY_TRADES=10
POSITION_LIMIT_PCT=0.2
ENABLE_RISK_MANAGEMENT=true

# Market Data Configuration
DATA_BUFFER_SIZE=1000
MARKET_DATA_UPDATE_INTERVAL=1.0

# Trading Sessions (Development - Extended Hours for Testing)
SESSION_PROVIDER=none
TRADING_START_TIME=06:00
TRADING_END_TIME=20:00
TRADING_DAYS=0,1,2,3,4,5,6

# Timezone
TZ=America/Phoenix
DEFAULT_TIMEZONE=America/Phoenix

# Development-specific settings
DATABASE_ECHO=true
LOG_LEVEL=DEBUG
